                        limit = { ROOT = { ai = no } }
                        ROOT = {
			    chronicle = {
			        entry = CHRONICLE_aenglisband
	                        portrait = [Prev.GetID]
                            }
                        }
                    }
                }
            }
        }
        ai_will_do = {
            factor = 1
        }
    }
    
