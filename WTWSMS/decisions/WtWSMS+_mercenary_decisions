                narrative_event = { id = wtwsmsplusmercenaryband.0 }
                create_character = {
                    random_traits = yes
                    culture = aenglis
                    dynasty = NONE
                    age = 30
                    attributes = {
                        martial = 16
                        diplomacy = 10
                        intrigue = 2
                        learning = 8
                        stewardship = 12
                    }
                }
                new_character = {
                    d_aenglisband = {
                        grant_title = PREV
                    }
                    set_defacto_liege = ROOT
